# Copy this file to .env.local and fill in values. .env.local is gitignored.

# OpenAI
OPENAI_API_KEY=
# Optional: allow brief background info when context is thin (kept false for demos)
RAG_ALLOW_GENERAL_KNOWLEDGE=false

# OCR provider (azure | local)
OCR_PROVIDER=azure

# Azure Vision (Read OCR)
AZURE_VISION_ENDPOINT=
AZURE_VISION_KEY=
# Polling for Azure Read (ms and attempts)
AZURE_READ_POLL_MS=1000
AZURE_READ_MAX_POLLS=180

# Azure Speech (optional, shortâ€‘audio transcription)
# Create a Speech resource or use Azure AI Services if it includes Speech.
AZURE_SPEECH_REGION=
AZURE_SPEECH_KEY=

# OCR fallbacks and limits
USE_LOCAL_OCR_FALLBACK=false
OCR_TEXT_MIN_CHARS=200
# PDF text extraction with PDF.js caps
PDF_MAX_TEXT_PAGES=50
# Azure per-page OCR cap
AZURE_OCR_MAX_PAGES=10
# Local OCR page cap (if USE_LOCAL_OCR_FALLBACK=true)
OCR_MAX_PAGES=10
# Prefer Azure OCR first for PDFs (true for scanned docs; false for normal text PDFs)
PDF_FORCE_AZURE_OCR=true

# Next.js
NEXT_TELEMETRY_DISABLED=1
